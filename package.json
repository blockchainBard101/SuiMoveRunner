{
  "name": "suimoverunner",
  "displayName": "Sui Move Runner",
  "description": "Deploy & Interact with Move Smart Contracts on Sui from the Sidebar",
  "publisher": "blockchainBard",
  "version": "0.4.0",
  "repository": "https://github.com/blockchainBard101/SuiMoveRunner.git",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:suiRunner.sidebarView",
    "onCommand:suimoverunner.createMovePackage",
    "onCommand:suimoverunner.publishMovePackage",
    "onCommand:suimoverunner.callMoveFunction",
    "workspaceContains:**/Move.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "suiRunner",
          "title": "SuiRunner",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "suiRunner": [
        {
          "id": "suiRunner.sidebarView",
          "name": "Sui Runner",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "suimoverunner.createMovePackage",
        "title": "Sui: Create Move Package"
      },
      {
        "command": "suimoverunner.publishMovePackage",
        "title": "Sui: Publish Move Package"
      },
      {
        "command": "suimoverunner.callMoveFunction",
        "title": "Sui: Call Move Function"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.1",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "mocha": "^11.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "toml": "^3.0.0",
    "tomlify-j0.4": "^3.0.0"
  }
}
